@using EczaneMesaj.Models

@{
    Layout = null;
    EczaneMesaj.Models.EczaneMessageEntities db = new EczaneMessageEntities();
    byte user = (byte)Session["ID"];
    Tbl_User deger = db.Tbl_User.Find(user);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>ECZANE UYGULAMASI</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
        </nav>
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="#" class="brand-link">
                <img height="50" width="50" src="https://icons.iconarchive.com/icons/graphicloads/medical-health/128/medicine-box-icon.png" />
                <span style="margin-left: 10px;font-size: x-large" class="brand-text font-weight-light"> MESAJ PANELİ</span>
            </a>
            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="@deger.Image" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">@deger.Name</a>
                    </div>
                </div>
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item has-treeview menu-open">
                            <a href="~/Users/List/" class="nav-link">
                                <i class="nav-icon fas fa-user"></i>
                                <p>
                                    PROFİLİM
                                </p>
                            </a>
                        </li>
                        @if (User.IsInRole("true"))
                        {
                            <li class="nav-item has-treeview">
                                <a href="~/Person/List/" class="nav-link">
                                    <i class="nav-icon fas fa-check-circle"></i>
                                    <p>
                                        KULLANICILARI DÜZENLE
                                    </p>
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("true"))
                        {
                            <li class="nav-item has-treeview">
                                <a href="~/AllMessage/List/" class="nav-link">
                                    <i class="nav-icon fas fa-box-tissue"></i>
                                    <p>
                                        TÜM MESAJLAR
                                    </p>
                                </a>
                            </li>
                        }
                        <li class="nav-item has-treeview">
                            <a href="~/Message/List/" class="nav-link">
                                <i class="nav-icon fas fa-mail-bulk"></i>
                                <p>
                                    MESAJLAR
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="~/Login/LogOut" class="nav-link">
                                <i class="nav-icon fas far fa-door-open"></i>
                                <p>
                                    ÇIKIŞ YAP
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        <div class="content-wrapper">
            <div class="content">
                <div class="container-fluid">
                    <br />
                    @RenderBody()
                </div>
            </div>
        </div>
        <aside class="control-sidebar control-sidebar-dark">
        </aside>
        <footer class="main-footer">
            <strong>Copyright &copy; @DateTime.Now.Year DESIGN BY <a href="https://bsite.net/TekcomBilgisayar/" target="_blank">DOĞUKAN KOŞAN</a></strong>
            <div class="float-right d-none d-sm-inline-block">
            </div>
        </footer>
    </div>
    <script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
    <script src="~/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/AdminLTE-3.0.4/dist/js/demo.js"></script>
    <script src="~/AdminLTE-3.0.4/dist/js/adminlte.js"></script>
    <link href="~/AdminLTE-3.0.4/plugins/summernote/summernote.min.css" rel="stylesheet" />
    <link href="~/AdminLTE-3.0.4/plugins/summernote/summernote-bs4.css" rel="stylesheet" />
    <script src="~/AdminLTE-3.0.4/plugins/summernote/summernote.js"></script>
    <link href="~/AdminLTE-3.0.4/plugins/summernote/summernote.css" rel="stylesheet" />
    <script src="~/AdminLTE-3.0.4/plugins/summernote/summernote-bs4.min.js"></script>
    <script>
        $(function () {
            $('#compose-textarea').summernote().noConflict;
        })
    </script>
    <script>
        $(function () {
            $(document).on('click', '[data-toggle="lightbox"]', function (event) {
                event.preventDefault();
                $(this).ekkoLightbox({
                    alwaysShowClose: true
                });
            });

            $('.filter-container').filterizr({ gutterPixels: 3 });
            $('.btn[data-filter]').on('click', function () {
                $('.btn[data-filter]').removeClass('active');
                $(this).addClass('active');
            });
        })
    </script>
</body>
</html>