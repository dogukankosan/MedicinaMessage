@model EczaneMesaj.Models.Tbl_Message
@{
    ViewBag.Title = "AddMessage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            @Html.Action("SideBard", "Message")
            <div class="col-md-9">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Yeni Mesaj Oluştur</h3>
                    </div>
                    @using (Html.BeginForm("AddMessage", "Message", FormMethod.Post))
                    {
                        <div class="card-body">
                            <div class="form-group">
                                @Html.DropDownListFor(x => x.Receiver, (List<SelectListItem>) ViewBag.users, new {@class = "form-control"})
                            </div>
                            <div class="form-group">
                                @Html.TextAreaFor(x => x.Context, new { @class = "form-control", required = "", @style = "height: 300px", @id = "compose-textarea" })
                                @Html.ValidationMessageFor(x => x.Context, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="float-right">
                                <button type="submit" class="btn btn-outline-primary">Gönder</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>